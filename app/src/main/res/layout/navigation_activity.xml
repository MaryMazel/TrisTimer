<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="spryrocks.com.tristimer.presentation.ui.screens.NavigationActivity" />

        <import type="spryrocks.com.tristimer.presentation.ui.screens.NavigationModel" />

        <variable
            name="view"
            type="NavigationActivity" />

        <variable
            name="model"
            type="NavigationModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@color/nav_view"
            android:onNavigationItemSelected="@{view.onNavigationItemSelectedListener}"
            app:menu="@menu/my_navigation_items" />

    </LinearLayout>
</layout>

